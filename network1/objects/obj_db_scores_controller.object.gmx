table = "scores";
stage = "Stage 1";
query = db_query_select(table,""); //prepare the query
db_cl_where(query,db_op_eq,"stage",stage); //start by selecting default stage scores
db_cl_sort(query,"score:desc"); //sort by highest score
db_cl_limit(query,15,0); //limit results to the top 10 scores
results = -1;

//results are drawn to a surface
width = 320;
height = 480;
canvas = surface_create(width,height);

alarm[0] = 4; //perform the query at room start
