//create the table
db_table_create("scores","player:string,stage:string,score:real");

//insert random scores for each level
for(var i=1;i&lt;=4;i++) {
    for(var j=0;j&lt;=30;j++) {
        db_record_create("scores","Player"+string(irandom(9999)),"Stage "+string(i),irandom(99999));
    }
}


